@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    var isLecturer = User.IsInRole("Lecturer");
    var isCoordinator = User.IsInRole("Coordinator");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">CMCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @* Lecturer Links *@
                    @if (isLecturer)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Create">Submit Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="Index">My Claims</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Documents" asp-action="Upload">Upload Documents</a>
                        </li>
                    }

                    @* Coordinator Links *@
                    @if (isCoordinator)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Coordinator" asp-action="Index">Pending Claims</a>
                        </li>
                        
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                Hello, @UserManager.GetUserName(User)!
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-center text-white p-3 mt-auto">
        <p>© 2025 CMCS | Developed by Ranil Monteiro</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
