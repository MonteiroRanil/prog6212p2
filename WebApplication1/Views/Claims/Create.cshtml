@model WebApplication1.Models.LecturerClaim

@{
    ViewData["Title"] = "Submit Claim";
}

<div class="min-h-screen bg-gray-50 flex justify-center items-center p-6">
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-2xl font-semibold text-gray-800 mb-6">Submit New Claim</h1>

        <form asp-action="Create" method="post" class="space-y-5">
            <div>
                <label asp-for="HoursWorked" class="block text-sm font-medium text-gray-700 mb-1">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.5"
                       class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="HoursWorked" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="HourlyRate" class="block text-sm font-medium text-gray-700 mb-1">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" type="number" step="0.01"
                       class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="HourlyRate" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                <textarea asp-for="Notes" rows="3"
                          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"></textarea>
                <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-3">
                <a asp-action="Index" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">Cancel</a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">Submit</button>
            </div>
        </form>
    </div>
</div> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
