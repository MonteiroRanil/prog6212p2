@model WebApplication1.Models.LecturerClaim

@{
    ViewData["Title"] = "Claim Details";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center p-6">
    <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-2xl">
        <h1 class="text-3xl font-semibold text-gray-800 mb-4">Claim Details</h1>
        <hr class="mb-4" />

        <dl class="space-y-3">
            <div>
                <dt class="font-medium text-gray-700">Hours Worked</dt>
                <dd class="text-gray-800">@Model.HoursWorked</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-700">Hourly Rate</dt>
                <dd class="text-gray-800">R @Model.HourlyRate</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-700">Total Amount</dt>
                <dd class="font-semibold text-gray-900">R @Model.TotalAmount</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-700">Notes</dt>
                <dd class="text-gray-800">@Model.Notes</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-700">Status</dt>
                <dd>
                    <span class="px-2 py-1 rounded text-black text-sm
                        @(Model.Status == WebApplication1.Models.LecturerClaim.ClaimStatus.Approved ? "bg-green-500" :
                                                    Model.Status == WebApplication1.Models.LecturerClaim.ClaimStatus.Rejected ? "bg-red-500" : "bg-yellow-500")">
                        @Model.Status
                    </span>
                </dd>
            </div>

            <div>
                <dt class="font-medium text-gray-700">Submitted At</dt>
                <dd class="text-gray-800">@Model.SubmittedAt.ToLocalTime()</dd>
            </div>

            @if (Model.ReviewedBy != null)
            {
                <div>
                    <dt class="font-medium text-gray-700">Reviewed By</dt>
                    <dd class="text-gray-800">@Model.ReviewedBy</dd>
                </div>
                <div>
                    <dt class="font-medium text-gray-700">Reviewed At</dt>
                    <dd class="text-gray-800">@Model.ReviewedAt?.ToLocalTime()</dd>
                </div>
            }
        </dl>

        <div class="mt-6 flex justify-end space-x-3">
            <a asp-action="Index" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition">Back</a>
        </div>
    </div>
</div>
