@model IEnumerable<WebApplication1.Models.LecturerClaim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-6xl mx-auto bg-white shadow-lg rounded-2xl p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-semibold text-gray-800">My Claims</h1>
            <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                + New Claim
            </a>
        </div>

        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-100 text-left text-gray-600 uppercase text-sm">
                    <th class="p-3">Claim ID</th>
                    <th class="p-3">Hours Worked</th>
                    <th class="p-3">Hourly Rate</th>
                    <th class="p-3">Total Amount</th>
                    <th class="p-3">Status</th>
                    <th class="p-3">Submitted At</th>
                    <th class="p-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="p-3">@claim.ClaimId</td>
                        <td class="p-3">@claim.HoursWorked</td>
                        <td class="p-3">R @claim.HourlyRate</td>
                        <td class="p-3 font-semibold text-gray-800">R @claim.TotalAmount</td>
                        <td class="p-3">
                            <span class="px-2 py-1 rounded text-orange text-sm
                                    @(claim.Status == WebApplication1.Models.LecturerClaim.ClaimStatus.Approved ? "bg-green-500" :
                                                                    claim.Status == WebApplication1.Models.LecturerClaim.ClaimStatus.Rejected ? "bg-red-500" : "bg-yellow-500")">
                            @claim.Status
                        </span>
                    </td>
                    <td class="p-3">@claim.SubmittedAt.ToLocalTime().ToShortDateString()</td>
                    <td class="p-3 text-center space-x-2">
                        <a asp-action="Details" asp-route-id="@claim.ClaimId" class="text-blue-600 hover:underline">View</a>
                        <a asp-action="Edit" asp-route-id="@claim.ClaimId" class="text-yellow-600 hover:underline">Edit</a>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
      
    </div>
</div>
