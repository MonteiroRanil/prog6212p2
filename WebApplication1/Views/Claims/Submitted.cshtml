@{
    ViewData["Title"] = "Claim Submitted";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="bg-white p-10 rounded-2xl shadow-lg text-center max-w-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>

        <h1 class="text-2xl font-semibold text-gray-800 mb-2">Claim Submitted!</h1>
        <p class="text-gray-600 mb-6">Your claim for R <strong>@ViewBag.TotalAmount</strong> has been submitted and is pending review.</p>

        <a asp-action="Index" class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Back to My Claims
        </a>
    </div>
</div>
