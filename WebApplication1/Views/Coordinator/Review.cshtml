@model WebApplication1.Models.LecturerClaim
@{
    ViewData["Title"] = "Review Claim";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 shadow rounded-xl">
    <h1 class="text-2xl font-bold mb-6">Review Claim</h1>

    <p><strong>Lecturer:</strong> @Model.User?.Email</p>
    <p><strong>Hours:</strong> @Model.HoursWorked</p>
    <p><strong>Total:</strong> R @Model.TotalAmount</p>
    <p><strong>Notes:</strong> @Model.Notes</p>

    <form asp-action="Approve" method="post" asp-route-id="@Model.ClaimId" class="inline-block mt-6">
        <button class="bg-green-600 text-white px-5 py-2 rounded hover:bg-green-700">Approve</button>
    </form>

    <form asp-action="Reject" method="post" asp-route-id="@Model.ClaimId" class="inline-block ml-3">
        <button class="bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700">Reject</button>
    </form>

    <a href="/Coordinator/Index" class="ml-4 text-blue-600 hover:underline">Cancel</a>
</div>
